<!--pages/category/index.wxml-->
<view class="cates">
  <SearchInpu></SearchInpu>
  <view class="cates_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y="true" class="left_menu">
      <view
       class="menu_item"
       wx:for="{{leftMenuList}}"
       wx:key = "*this"
       >
        {{item}}
      </view>
    </scroll-view>
    <scroll-view scroll-y="true" class="right_content">
      <view class="gods_group"
      wx:for="{{rightContent}}"
      wx:for-index="index1"
      wx:for-item = "item1">
        <view class="godds_title">{{item1.cat_name}}</view>
        <view class="godds_list">
          <navigator wx:for="{{item1.children}}"
          wx:for-index="index2"
          wx:for-item = "item2"
          wx:key="cat.id">
          <image mode="widthFix" src="{{item2.cat_icon}}"></image>
          <view class="goods_name">{{item2.cat_name}}</view>
        </navigator>
        </view>
      </view>
    </scroll-view>
    <!-- 右侧菜单 -->
  </view>
</view>

